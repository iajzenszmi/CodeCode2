#include <iostream>
#include <cmath>

using namespace std;

int main()
{
	int x;
	int y;
	cout << "This program calculates the points of a curve y=x**2 and then plots and prints the curve \n";
	for (x = -5; x < 6; x++)
	{
		y = pow(x, 2);
		cout << "When x = " << x << ", y = " << y << "\n";
	}
	cout << "\n";
	cout << "x  |  y\n";
	cout << "---------\n";
	for (x = -5; x < 6; x++)
	{
		y = pow(x, 2);
		cout << x << "  |  " << y << "\n";
	}
	return 0;
}
